<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chinmay.roy.sudoku_game">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.chinmay.roy.sudoku_game.MainActivity"
            android:configChanges="locale">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.chinmay.roy.sudoku_game.GameActivity">
            <intent-filter>
                <action android:name="com.chinmay.roy.GameActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.chinmay.roy.sudoku_game.NewBoardActivity">
            <intent-filter>
                <action android:name="com.chinmay.roy.NewBoardActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.chinmay.roy.sudoku_game.InstructionsActivity">
            <intent-filter>
                <action android:name="com.chinmay.roy.InstructionsActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.chinmay.roy.sudoku_game.ChooseNumberActivity">
            <intent-filter>
                <action android:name="com.chinmay.roy.ChooseNumberActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.chinmay.roy.sudoku_game.GameDifficultyActivity">
            <intent-filter>
                <action android:name="com.chinmay.roy.GameDifficultyActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.chinmay.roy.sudoku_game.AboutDeveloperActivity">
            <intent-filter>
                <action android:name="com.chinmay.roy.AboutDeveloperActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.chinmay.roy.sudoku_game.ContactUsActivity">
            <intent-filter>
                <action android:name="com.chinmay.roy.ContactUsActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>